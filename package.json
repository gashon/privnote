{
  "name": "secret-send",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others \"pnpm run db:start\" \"wait-on tcp:5432 && pnpm run dev\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "db:start": "docker run --rm -v data:/var/lib/postgresql/data --name secret-send-db -e POSTGRES_PASSWORD=postgres -e POSTGRES_DB=secret_send -e POSTGRES_USER=postgres -p 5431:5432 postgres",
    "db:stop": "docker stop secret-send-db && docker rm secret-send-db",
    "db:reset": "docker exec -it secret-send-db psql -U postgres -c 'DROP DATABASE IF EXISTS secret_send'",
    "db:migrate": "node -r esbuild-runner/register  src/server/db/migrations/scripts/to-latest.ts && pnpm db:types:generate",
    "db:migrate:undo:all": "node -r esbuild-runner/register  src/server/db/migrations/scripts/drop-all.ts && pnpm db:types:generate",
    "db:types:generate": "kysely-codegen --dialect postgres --camel-case --out-file src/server/db/types.d.ts",
    "lhci:mobile": "lhci autorun",
    "lhci:desktop": "lhci autorun --collect.settings.preset=desktop"
  },
  "dependencies": {
    "@tanstack/react-query": "^4.29.7",
    "@trpc/client": "^10.27.3",
    "@trpc/react-query": "^10.27.3",
    "@trpc/server": "^10.27.3",
    "@types/uuid": "^9.0.1",
    "autoprefixer": "10.4.14",
    "concurrently": "8.0.1",
    "crypto": "^1.0.1",
    "dotenv": "^16.0.3",
    "eslint": "8.41.0",
    "eslint-config-next": "13.4.3",
    "next": "13.4.3",
    "postcss": "8.4.23",
    "prettier": "^2.8.8",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.2",
    "typescript": "5.0.4",
    "uuid": "^9.0.0",
    "wait-on": "7.0.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/node": "20.2.3",
    "@types/pg": "^8.10.1",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "esbuild": "^0.17.19",
    "esbuild-runner": "^2.2.2",
    "install": "^0.13.0",
    "kysely": "^0.24.2",
    "kysely-codegen": "^0.10.0",
    "npm": "^9.6.7",
    "pg": "^8.11.0"
  }
}
